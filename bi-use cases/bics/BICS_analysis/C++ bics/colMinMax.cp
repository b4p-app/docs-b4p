/** FUNCTION:		colMinMax** Given a data set data[1...ROWS][1...COLS], compute max and min * values for one column on a specified range [ibeg...iend]. * Usually ibeg=1 and iend = ndata. Returned are the max and min, * and indices of the max and min values, imax, imin. Missing data * (-999) are skipped in calculations.**/#include <math.h>void colMinMax(float **data, int col, long int ibeg, long int iend, 				long int *imax, long int *imin, float *max, float *min){	*min=0.0;	*max=0.0;		for(long int i=ibeg; i<=iend; i++) 		{		if( data[i][col] != -999) 			{			if( data[i][col] < *min ) 				{				*min = 	data[i][col];				*imin = i;				}			if( data[i][col] > *max ) 				{				*max  = data[i][col];				*imax = i;				}			}		}	return;}